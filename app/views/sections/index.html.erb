<p id="notice"><%= notice %></p>
<table id = "sectionsTable">
  <thead>
    <tr>
      <th class = "sort" data-sort = "start-date"><h4>Start Date</h4></th>
      <th class = "sort" data-sort = "end-date"><h4>End Date</h4></th>
      <th class = "sort" data-sort = "meeting-scheme"><h4>Meeting Scheme</h4></th>
      <th class = "sort" data-sort = "meeting-time"><h4>Meeting Time</h4></th>
      <th class = "sort" data-sort = "section-hours"><h4>Section Hours</h4></th>
      <th class = "sort" data-sort = "course"><h4>Course</h4></th>
      <th colspan="3"><h4>Actions</h4></th>
    </tr>
  </thead>
  <tbody class = "list">
    <% @sections.each do |section| %>
      <tr>
        <td class = "start-date"><h4><%= section.start_date %></h4></td>
        <td class = "end-date"><h4><%= section.end_date %></h4></td>
        <td align = "center" class = "meeting-scheme"><h4><%= section.meeting_scheme %></h4></td>
        <td align = "center" class = "meeting-time"><h4><%= section.meeting_time.strftime("%I:%M %p") %></h4></td>
        <td align = "center" class = "section-hours"><h4><%= section.section_hours %></h4></td>
        <td align = "center" class = "course cellLink"><h4><%= link_to @courses_for_sections[section.course_id], @courses_for_links[section.course_id] %></h4></td>
        <td><h3><%= link_to image_tag("showIcon.png",  class: "icon"), section %></h4></td>
        <td><h3><%= link_to image_tag("editIcon.png",  class: "icon"), edit_section_path(section) %></h4></td>
        <td><h3><%= link_to image_tag("deleteIcon.png",  class: "icon"), section, method: :delete, data: { confirm: 'Are you sure?' } %></h4></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id = "sectionsTableSettings">
  <h2>Search:</h2>
  <input id = "sectionSearch" class="search"/>
  <h2>Filter By:</h2>
  <select id = "filterBy" class = "meeting-scheme-filter">
    <option value="all">All</option>
    <option value="MWF">Day</option>
    <option value="TTh">Evening</option>
  </select>
  <h2 id = "resultsCount"></h2>
  <div>
    <%= link_to 'Create New Section', new_section_path %>
  </div>
</div>

<br>


