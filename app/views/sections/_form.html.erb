<%= form_with(model: section, local: true) do |form| %>
  <% if section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% section.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :start_date %>
    <%= form.date_select :start_date %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
    <%= form.date_select :end_date %>
  </div>

  <div class="field">
    <%= form.label :meeting_scheme %>
    <%= form.select :meeting_scheme, ['MWF', 'TTh'] %>
  </div>

  <div class="field">
    <%= form.label :meeting_time %>
    <%= form.select :meeting_time, ['12:00', '16:00'] %>
  </div>

  <div class="field">
    <%= form.label :section_hours %>
    <%= form.select :section_hours, [2, 3] %>
  </div>

  <div class="field">
    <%= form.label :course_id %>
    <%= form.select :course_id, Course.all.collect {|course| ["#{course.course_title} #{course.course_description}", course.id] } %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
